<div class="col-12 col-md-6 mb-3">
  <div class="card mechanic-card shadow-sm h-100">
    <div class="card-body d-flex flex-column justify-content-between">
      <div>
        <h6 class="mb-1"><%= mechanic.name %></h6>
        <div class="rating-stars mb-1">
          <% for (let i = 0; i < Math.round(mechanic.rating); i++) { %>★<% } %>
          <% for (let i = Math.round(mechanic.rating); i < 5; i++) { %>☆<% } %>
          <small>(<%= mechanic.reviewsCount %>)</small>
        </div>
        <div class="mb-2">
          <% mechanic.specialties.forEach(function(s){ %>
            <span class="chip"><%= s %></span>
          <% }) %>
        </div>
        <div class="mb-2">
          <small class="text-muted">Usta marka uzmanlıkları:</small>
          <div class="mt-1">
            <% (mechanic.brandExpertise || []).forEach(function(b){ %>
              <span class="badge bg-light text-dark border me-1"><%= b %></span>
            <% }) %>
          </div>
        </div>
        <% if ((mechanic.interests || []).length) { %>
        <div class="mb-2">
          <small class="text-muted">İlgi alanları:</small>
          <div class="mt-1">
            <% (mechanic.interests || []).forEach(function(i){ %>
              <span class="badge bg-secondary-subtle text-dark border me-1"><%= i %></span>
            <% }) %>
          </div>
        </div>
        <% } %>
        <div class="eta">Tahmini başlangıç: <%= mechanic.etaMinutes %> dk</div>
      </div>
      <div class="mt-3 d-flex justify-content-between align-items-center">
        <a class="btn btn-outline-primary btn-sm" href="#/usta/<%= mechanic.id %>">Detay</a>
        <button class="favorite-btn <%= isFav ? 'active' : '' %>" data-fav-id="<%= mechanic.id %>" aria-label="Favoriye ekle/kaldır" aria-pressed="<%= isFav %>"><%= isFav ? '♥' : '♡' %></button>
      </div>
    </div>
  </div>
</div>


