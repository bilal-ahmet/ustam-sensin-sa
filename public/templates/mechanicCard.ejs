<div class="col-12 col-md-6 mb-4">
  <div class="card mechanic-card h-100">
    <div class="card-body">
      <button class="btn-fav <%= isFav ? 'active' : '' %>" data-fav-id="<%= mechanic.id %>" aria-label="Favoriye ekle/kaldır" aria-pressed="<%= isFav %>">
        <i class="fas fa-heart"></i>
      </button>
      <div class="d-flex align-items-center mb-3">
        <div class="mechanic-avatar">
          <i class="fas fa-user"></i>
        </div>
        <div class="ms-3">
          <h5 class="card-title mb-0"><%= mechanic.name %></h5>
          <div class="rating">
            <span class="rating-score"><%= mechanic.rating.toFixed(1) %></span>
            <% for (let i = 0; i < 5; i++) { %>
              <i class="fa-star <%= i < Math.round(mechanic.rating) ? 'fas' : 'far' %>"></i>
            <% } %>
            <span class="reviews-count">(<%= mechanic.reviewsCount %> yorum)</span>
          </div>
        </div>
      </div>
      
      <p class="card-text text-muted mb-3"><%= mechanic.bio %></p>

      <div class="specialties mb-3">
        <% mechanic.specialties.forEach(function(s){ %>
          <span class="specialty-tag"><%= s %></span>
        <% }) %>
      </div>

      <div class="d-flex justify-content-between align-items-center">
        <div class="eta">
          <i class="far fa-clock"></i> <%= mechanic.etaMinutes %> dk içinde
        </div>
        <a class="btn btn-primary btn-sm stretched-link" href="#/usta/<%= mechanic.id %>">Profiline Git</a>
      </div>
    </div>
  </div>
</div>


